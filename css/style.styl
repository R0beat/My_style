/*****************************************************************************************
                                        Plantilla
*****************************************************************************************/
.header
    border: 3px solid var(--blue-hard)
    background: var(--blue-light)
.nav
    border: 3px solid var(--green-hard)
    background: var(--green-light)
.contenido
    border: 3px solid var(--purple-hard)
    background: var(--purple-light)
.lateral
    border: 3px solid var(--aqua-hard)
    background: var(--aqua-light)
.footer
    border: 3px solid var(--red-hard)
    background: var(--red-light)
/*****************************************************************************************
                                        Componentes
*****************************************************************************************/
/***************************
            Card
***************************/
.linea
    width 100%
    padding: 5px
    background: var(--danger)
    border-radius: 3px
    box-shadow: 2px 2px 10px rgb(221,221,221,0.3)
    color: var(--light)
    display: flex
    flex-wrap: wrap
    box-shadow: 2px 2px 10px rgba(124, 111, 106,0.3)
/***************************
            Card
***************************/
.card
    width 100%
    padding: 15px
    background: var(--light-light)
    border-radius: 3px
    box-shadow: 2px 2px 10px rgba(124, 111, 106,0.3)
/***************************
            Card
***************************/
.caja
    width 100%
    padding: 15px
    background: var(--blue-light)
    font-size: 14px
    font-weight: bold
